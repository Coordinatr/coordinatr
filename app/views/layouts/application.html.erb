<!DOCTYPE html>
<html>
<head>
  <title>Coordinatr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% flash.each do |key, msg| %>
    <ul>
      <li class="<% key %>"><%= msg %></li>
    </ul>
  <% end %>
  <% if logged_in? %>
    <ul>
      <li>Name: <%= current_user.name %></li>
      <li>Provider: <%= current_user.provider %></li>
      <li>Picture: <img src=<%= current_user.image_url %> alt="profile"/></li>
      <li><%= link_to 'Log Out', logout_url, method: :delete %></li>
    </ul>
  <% end %>

</head>
<body>

<%= yield %>

</body>
</html>
